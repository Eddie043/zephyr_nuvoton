&i3c0 {
	status = "okay";
	assigned-address = <0x20>;
	part-id = <0x1234>;
	vendor-def-id = <0x567>;
	bcr = <0x66>;
	dcr = <0xCC>;
	busno = <0x0>;
	pinctrl-0 = <&pinctrl_i3c0_default>;
	i2c-scl-hz = <100000>;
	i3c-scl-hz = <12500000>;

