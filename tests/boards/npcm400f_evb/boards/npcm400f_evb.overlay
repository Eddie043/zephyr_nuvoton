&i3c1 {
	status = "okay";
	slave;
	secondary;
	assigned-address = <0x21>;
	part-id = <0x1234>;
	vendor-def-id = <0x567>;
	bcr = <0x66>;
	dcr = <0xCC>;
	busno = <0x0>;
	pinctrl-0 = <&pinctrl_i3c1_default>;
	i2c-scl-hz = <100000>;
	i3c-scl-hz = <12500000>;
	/* ibi-append-pec; */
	/* priv-xfer-pec; */

	/* #address-cells = <0x01> */
	/* #size-cells = <0x00> */

	i3c1_smq:i3c-slave-mqueue@21 {
		compatible = "i3c-slave-mqueue";
		reg = <0x21>;
		msg-size = <256>;
		num-of-msgs = <4>;
		mandatory-data-byte = <0xB0>;
		label = "I3C_1_SMQ";
		status = "okay";
	};
};
