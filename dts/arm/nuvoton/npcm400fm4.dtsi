#include <mem.h>
#include "npcm400f.dtsi"

/ {
	flash0: flash@80000 {
		reg = <0x00080000 DT_SIZE_M(1)>;
	};

	sram0: memory@10088000 {
		compatible = "mmio-sram";
		reg = <0x10088000 DT_SIZE_K(252)>;
	};

	soc-id {
		device-id = <0x21>;
	};
};

&spi_fiu0 {
	int_flash: w25q80@0 {
		compatible ="jedec,spi-nor";
		/* 8388608 bits = 1 Mbytes */
		size = <0x800000>;
		label = "W25Q80";
		reg = <0>;
		spi-max-frequency = <50000000>;
		status = "okay";
		jedec-id = [ef 40 14];
	};
};
